{% doc %}
  @prompt
    I need a carousel but not for collections, just for images I upload
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-carousel-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding }}px 0;
  }

  .ai-image-carousel__container-{{ ai_gen_id }} {
    position: relative;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-image-carousel__track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease;
    gap: {{ block.settings.gap }}px;
  }

  .ai-image-carousel__slide-{{ ai_gen_id }} {
    min-width: 100%;
    flex-shrink: 0;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
  }

  .ai-image-carousel__slide-{{ ai_gen_id }} img {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    object-fit: cover;
    display: block;
  }

  .ai-image-carousel__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-image-carousel__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
  }

  .ai-image-carousel__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-image-carousel__controls-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin-top: 20px;
  }

  .ai-image-carousel__button-{{ ai_gen_id }} {
    width: {{ block.settings.button_size }}px;
    height: {{ block.settings.button_size }}px;
    border-radius: 50%;
    background-color: {{ block.settings.button_color }};
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease, transform 0.2s ease;
    color: {{ block.settings.button_icon_color }};
  }

  .ai-image-carousel__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    transform: scale(1.1);
  }

  .ai-image-carousel__button-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
    transform: scale(1);
  }

  .ai-image-carousel__button-{{ ai_gen_id }} svg {
    width: calc({{ block.settings.button_size }}px * 0.5);
    height: calc({{ block.settings.button_size }}px * 0.5);
  }

  .ai-image-carousel__dots-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
  }

  .ai-image-carousel__dot-{{ ai_gen_id }} {
    width: {{ block.settings.dot_size }}px;
    height: {{ block.settings.dot_size }}px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
    padding: 0;
  }

  .ai-image-carousel__dot-{{ ai_gen_id }}:hover {
    transform: scale(1.2);
  }

  .ai-image-carousel__dot-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.dot_active_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-image-carousel__slide-{{ ai_gen_id }} img,
    .ai-image-carousel__placeholder-{{ ai_gen_id }} {
      height: {{ block.settings.image_height_mobile }}px;
    }
  }
{% endstyle %}

<image-carousel-{{ ai_gen_id }} class="ai-image-carousel-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-image-carousel__container-{{ ai_gen_id }}">
    <div class="ai-image-carousel__track-{{ ai_gen_id }}">
      {% liquid
        assign has_images = false
        for i in (1..10)
          assign image_key = 'image_' | append: i
          if block.settings[image_key] != blank
            assign has_images = true
            break
          endif
        endfor
      %}

      {% if has_images %}
        {% for i in (1..10) %}
          {% liquid
            assign image_key = 'image_' | append: i
            assign image = block.settings[image_key]
          %}
          {% if image != blank %}
            <div class="ai-image-carousel__slide-{{ ai_gen_id }}">
              <img
                src="{{ image | image_url: width: 2000 }}"
                alt="{{ image.alt | escape }}"
                loading="lazy"
                width="{{ image.width }}"
                height="{{ image.height }}"
              >
            </div>
          {% endif %}
        {% endfor %}
      {% else %}
        <div class="ai-image-carousel__slide-{{ ai_gen_id }}">
          <div class="ai-image-carousel__placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
            <div class="ai-image-carousel__empty-state-{{ ai_gen_id }}">
              Next, add images to your carousel
            </div>
          </div>
        </div>
      {% endif %}
    </div>

    {% if has_images %}
      <div class="ai-image-carousel__controls-{{ ai_gen_id }}">
        <button
          class="ai-image-carousel__button-{{ ai_gen_id }} ai-image-carousel__prev-{{ ai_gen_id }}"
          aria-label="Previous slide"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>

        <div class="ai-image-carousel__dots-{{ ai_gen_id }}"></div>

        <button
          class="ai-image-carousel__button-{{ ai_gen_id }} ai-image-carousel__next-{{ ai_gen_id }}"
          aria-label="Next slide"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      </div>
    {% endif %}
  </div>
</image-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class ImageCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.autoplayInterval = null;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-image-carousel__track-{{ ai_gen_id }}');
        this.slides = this.querySelectorAll('.ai-image-carousel__slide-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-image-carousel__prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-image-carousel__next-{{ ai_gen_id }}');
        this.dotsContainer = this.querySelector('.ai-image-carousel__dots-{{ ai_gen_id }}');

        if (this.slides.length <= 1) return;

        this.createDots();
        this.setupEventListeners();
        this.updateCarousel();

        {% if block.settings.autoplay %}
          this.startAutoplay();
        {% endif %}
      }

      createDots() {
        this.slides.forEach((slide, index) => {
          const dot = document.createElement('button');
          dot.classList.add('ai-image-carousel__dot-{{ ai_gen_id }}');
          dot.setAttribute('aria-label', 'Go to slide ' + (index + 1));
          dot.addEventListener('click', () => {
            this.goToSlide(index);
            this.resetAutoplay();
          });
          this.dotsContainer.appendChild(dot);
        });
        this.dots = this.querySelectorAll('.ai-image-carousel__dot-{{ ai_gen_id }}');
      }

      setupEventListeners() {
        this.prevButton.addEventListener('click', () => {
          this.prevSlide();
          this.resetAutoplay();
        });

        this.nextButton.addEventListener('click', () => {
          this.nextSlide();
          this.resetAutoplay();
        });

        let touchStartX = 0;
        let touchEndX = 0;

        this.track.addEventListener('touchstart', (e) => {
          touchStartX = e.changedTouches[0].screenX;
        });

        this.track.addEventListener('touchend', (e) => {
          touchEndX = e.changedTouches[0].screenX;
          if (touchStartX - touchEndX > 50) {
            this.nextSlide();
            this.resetAutoplay();
          } else if (touchEndX - touchStartX > 50) {
            this.prevSlide();
            this.resetAutoplay();
          }
        });
      }

      updateCarousel() {
        const offset = -this.currentIndex * 100;
        this.track.style.transform = 'translateX(' + offset + '%)';

        this.dots.forEach((dot, index) => {
          if (index === this.currentIndex) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });

        if (this.currentIndex === 0) {
          this.prevButton.disabled = true;
        } else {
          this.prevButton.disabled = false;
        }

        if (this.currentIndex === this.slides.length - 1) {
          this.nextButton.disabled = true;
        } else {
          this.nextButton.disabled = false;
        }
      }

      goToSlide(index) {
        this.currentIndex = index;
        this.updateCarousel();
      }

      nextSlide() {
        if (this.currentIndex < this.slides.length - 1) {
          this.currentIndex++;
        } else {
          this.currentIndex = 0;
        }
        this.updateCarousel();
      }

      prevSlide() {
        if (this.currentIndex > 0) {
          this.currentIndex--;
        } else {
          this.currentIndex = this.slides.length - 1;
        }
        this.updateCarousel();
      }

      startAutoplay() {
        this.autoplayInterval = setInterval(() => {
          this.nextSlide();
        }, {{ block.settings.autoplay_speed | times: 1000 }});
      }

      resetAutoplay() {
        {% if block.settings.autoplay %}
          if (this.autoplayInterval) {
            clearInterval(this.autoplayInterval);
            this.startAutoplay();
          }
        {% endif %}
      }

      disconnectedCallback() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
        }
      }
    }

    customElements.define('image-carousel-{{ ai_gen_id }}', ImageCarousel{{ ai_gen_id }});
  })();
</script>

