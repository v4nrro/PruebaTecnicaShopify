<div id="button-reveal-{{ section.id }}" class="button-reveal-wrapper">
  <button 
    id="reveal-btn-{{ section.id }}" 
    type="button"
    style="padding: 12px 20px; background: black; color: white; border: none; cursor: pointer;"
  >
    {{ section.settings.button_text }}
  </button>

  <p 
    id="reveal-msg-{{ section.id }}" 
    style="display:none; margin-top: 15px;"
  >
    {{ section.settings.reveal_message }}
  </p>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const btn = document.getElementById("reveal-btn-{{ section.id }}");
    const msg = document.getElementById("reveal-msg-{{ section.id }}");

    if (btn) {
      btn.addEventListener("click", function() {
        btn.style.display = "none";
        msg.style.display = "block";
      });
    }
  });
</script>

{% schema %}
{
  "name": "Button Reveal Message",
  "settings": [
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Click me"
    },
    {
      "type": "text",
      "id": "reveal_message",
      "label": "Message to show",
      "default": "Thanks! Your message has appeared."
    }
  ],
  "presets": [
    {
      "name": "Button Reveal Message"
    }
  ]
}
{% endschema %}
